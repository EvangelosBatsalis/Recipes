-->creation of recipe table
CREATE TABLE recipe (id int GENERATED BY DEFAULT AS IDENTITY, name varchar(512), description varchar(512), PRIMARY KEY (id));
-->adding auth user id
ALTER TABLE recipe ADD user_id int NOT NULL;
-->drop of recipe table
DROP TABLE recipe IF EXISTS;

-->creation of ingredients with foreign key id(from table)
